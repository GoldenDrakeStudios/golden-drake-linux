#!/bin/bash

set_desktop_and_graphics_settings() {
  op_title="${de_op_msg}"
  while (true); do
    DESKTOP_ENV=$(dialog --stdout --ok-button "${done_msg}" --cancel-button \
      "${cancel}" --menu "\n${environment_msg}" 14 60 6 \
      "gnome" "${de0}" \
      "cinnamon" "${de1}" \
      "xfce" "${de2}")
    if [ -n "${DESKTOP_ENV}" ]; then
      break
    fi
  done
  case "${DESKTOP_ENV}" in
  "gnome")
    XINITRC="exec gnome-session"
    BASE_PACKAGES+="gnome gnome-extra variety "
    AUR_AND_OPTIONAL_PACKAGES+="gnome-shell-extension-clipboard-indicator-git "
    DM="gdm"
    ;;
  "cinnamon")
    XINITRC="exec cinnamon-session"
    BASE_PACKAGES+="cinnamon cinnamon-translations redshift gnome-screenshot
      gnome-calculator gnome-terminal file-roller nemo-fileroller p7zip zip
      unrar parole xed xreader "
    AUR_AND_OPTIONAL_PACKAGES+="xviewer clipit "
    ;;
  "xfce")
    XINITRC="exec startxfce4"
    BASE_PACKAGES+="xfce4 xfce4-goodies galculator redshift xcape file-roller
      p7zip zip unrar "
    AUR_AND_OPTIONAL_PACKAGES+="mugshot xfce-superkey-git "
    ;;
  esac
  if [ "${DESKTOP_ENV}" != "gnome" ]; then
    BASE_PACKAGES+="lightdm lightdm-gtk-greeter lightdm-gtk-greeter-settings "
  fi

  source "${LANG_FILE}"
  while (true); do
    GPU=""
    if "${VM}"; then
      case "${virt}" in
      qemu)
        GPU="spice-vdagent"
        log "Added QEMU guest utils"
        ;;
      vbox)
        GPU="virtualbox-guest-utils virtualbox-guest-dkms"
        log "Added VirtualBox guest utils"
        ;;
      vmware)
        GPU="xf86-video-vmware xf86-input-vmmouse open-vm-tools net-tools gtkmm"
        log "Added VMware guest utils"
        ;;
      hyper-v)
        GPU="xf86-video-fbdev"
        log "Added HyperV guest utils"
        ;;
      *)
        GPU="xf86-video-fbdev"
        log "Added generic VM guest utils"
        ;;
      esac
      break
    fi
    if "${NVIDIA}"; then
      GPU=$(dialog --stdout --ok-button "${ok}" --cancel-button "${cancel}" \
        --menu "${graphics_msg}" 18 60 6 \
        "${default}" "${gr0}" \
        "xf86-video-ati" "${gr4}" \
        "xf86-video-amdgpu" "${gr10}" \
        "xf86-video-intel" "${gr5}" \
        "xf86-video-nouveau" "${gr8}" \
        "xf86-video-vesa" "${gr1}" \
        "nvidia" "${gr2} ->")
    else
      GPU=$(dialog --stdout --ok-button "${ok}" --cancel-button "${cancel}" \
        --menu "${graphics_msg}" 17 60 5 \
        "${default}" "${gr0}" \
        "xf86-video-ati" "${gr4}" \
        "xf86-video-amdgpu" "${gr10}" \
        "xf86-video-intel" "${gr5}" \
        "xf86-video-nouveau" "${gr8}" \
        "xf86-video-vesa" "${gr1}")
    fi
    if [ "${GPU}" = "${default}" ]; then
      GPU="${default_GPU}"
    fi
    if [ "${GPU}" = "nvidia" ]; then
      GPU+=" nvidia-libgl nvidia-utils lib32-nvidia-utils nvidia-settings
        nvidia-prime nvidia-dkms"
      NVIDIA_DRM=true
      break
    elif [ -n "${GPU}" ]; then
      if [ "${GPU}" = "xf86-video-ati" ] ||
         [ "${GPU}" = "xf86-video-amdgpu" ]; then
        GPU+=" vulkan-radeon lib32-vulkan-radeon"
      elif [ "${GPU}" = "xf86-video-intel" ]; then
        GPU+=" vulkan-intel lib32-vulkan-intel lib32-libva-intel-driver"
      fi
      break
    fi
  done
  BASE_PACKAGES+="${GPU} mesa lib32-mesa "

  if "${LAPTOP}" || (yesno "\n${touchpad_msg}" "${yes}" "${no}"); then
    BASE_PACKAGES+="xf86-input-libinput "
  fi
  if "${BLUETOOTH_ENABLED}"; then
    if (yesno "\n${blueman_msg}" "${yes}" "${no}"); then
      BASE_PACKAGES+="blueman "
    fi
  fi
}

configure_desktop_environment() {
  arch-chroot /mnt fc-cache -f # build font information cache files
  cp "${GDL_DIR}"/extra/gdl.png /mnt/root/.face
  cp "${GDL_DIR}"/extra/gdl.png /mnt/usr/share/pixmaps
  cp "${GDL_DIR}"/extra/gdl.png /mnt/usr/share/icons
  cp -rT "${GDL_DIR}"/extra/wallpapers /mnt/usr/share/backgrounds
  cp -rT "${GDL_DIR}"/extra/skel "${SKEL_DIR}"
  cp -rT "${GDL_DIR}"/extra/"${DESKTOP_ENV}" "${SKEL_DIR}"
  chmod +x "${SKEL_DIR}"/.config/set-initial-gsettings
  log "Configured desktop environment: ${DESKTOP_ENV}"
}
