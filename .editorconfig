# Golden Drake Linux's EditorConfig specification
# More info at https://editorconfig.org

# Specify this is the top-most config
root = true

# Use Unix-style newlines and a newline at the end of every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Settings for libraries
[lib/*]
indent_style = space
indent_size = 4
max_line_length = 80
